                                <Condition Property="IsSelected"
                                           Value="False" />
                            </MultiTrigger.Conditions>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected"
                                           Value="true" />
                                <Condition Property="IsMouseOver"
                                           Value="true"
                                           SourceName="Selection_Border" />
