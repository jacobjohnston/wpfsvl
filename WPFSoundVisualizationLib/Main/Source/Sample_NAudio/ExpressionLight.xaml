                                Margin="0"
                                x:Name="Border"
                                Height="4"
                                CornerRadius="2"
                                Background="{DynamicResource LightBrush}"
                                BorderBrush="{DynamicResource NormalBorderBrush}"
                                BorderThickness="1,1,1,1" />
                        <Track Grid.Row="1"
                               x:Name="PART_Track">
